<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FScruiser.Cells.TreeCell">
    <StackLayout Orientation="Horizontal">
        <StackLayout.Resources>
            <ResourceDictionary>
                <Style TargetType="Label">
                    <Setter Property="FontSize" Value="Large" />
                </Style>
                <Style TargetType="Entry">
                    <Setter Property="FontSize" Value="Large" />
                </Style>
            </ResourceDictionary>
        </StackLayout.Resources>
        <Label x:Name="TreeNumber"
               Text="{Binding TreeNumber}"
               FontSize="Large" />
        <Entry x:Name="Stratum" Text="{Binding StratumCode}" />
        <Entry x:Name="SampleGroup" Text="{Binding SampleGroupCode}" />
        <Entry x:Name="Species" Text="{Binding SpeciesCode}" />
        <Entry x:Name="DBH" Text="{Binding Diameter}" />
        <Entry x:Name="Height" Text="{Binding Height}" />
        <Button x:Name="Edit" Text="Edit" />
        <Button x:Name="Delete" Text="Delete" />
    </StackLayout>
</ViewCell>