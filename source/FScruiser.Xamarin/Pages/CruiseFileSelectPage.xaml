<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Name="TopPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FScruiser.XF.Pages.CruiseFileSelectPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="FolderPicker" ItemsSource="{Binding FileGroups}" SelectedItem="{Binding SelectedFolder}" ItemDisplayBinding="GroupName"></Picker>
            <ScrollView>
                <ListView x:Name="FileListView" ItemsSource="{Binding SelectedFolder.CruiseFiles}" ItemSelected="FileListView_ItemSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Name}"
                              Command="{Binding BindingContext.ShowCruiseCommand, Source={x:Reference TopPage}}"
                              CommandParameter="{Binding .}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>